@model List<Zooe.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    //var roleTitle = Model.Title;
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit Users in Role</title>
    <style>
        #header {
            background-color: black;
        }
    </style>
</head>
<body id="exhibit-body">
<main id="main">
<section id="about">
    <div class="container">

        <header class="section-header" style="margin-top: 100px">
            <h3>Add or Remove Users from Role</h3>
        </header>
        <form method="post">
            <div class="form-group row">
                <div class="col-sm-10">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].UserName" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].UserName
                            </label>
                        </div>
                    }
                </div>
                <div class="footer-info">
                    <input type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
                    <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger" style="width: auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>
</main>
</body>
</html>